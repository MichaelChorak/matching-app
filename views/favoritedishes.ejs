<!DOCTYPE html>
<html lang="en">
    <link rel="stylesheet" href="css/loggedIn.css">
    <%- include('../views/partials/head.ejs') %>
<body>
    <%- include('../views/partials/loggedHeader.ejs') %>

<main id="favorite">
    <section>
        <a href="/thedishes" id="headMenu">&#129128;</a>     
        <h1>Favorites</h1>
    </section>

    <article>
    <div>&#128970;</div>
    <p>Add your favorite dishes here!</p>
    </article>
    <%  savedDishes.forEach(function(dish){ %>
            <article id="recipeCards">
                  <div>
                  <h3><%= dish.title %></h3>
                  </div>
                  <div>
                  <p><i class="fas fa-user-alt"> </i><%= dish.people %></p>
                  <p><i class="fas fa-globe-europe"> </i><%= dish.country %></p>
                  <p><i class="far fa-clock"></i> <%= dish.duration[0] + dish.duration[1] %> </p>
                  <a href="/thedishes/<%= dish.title %>">Read More</a>
                  </div>
            </article>
            <% }) %>
</main>
<%- include('../views/partials/footer.ejs') %>
</body>
</html>
