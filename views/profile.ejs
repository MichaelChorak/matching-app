<!doctype html>
<html lang="en">

<head>
    <!-- head -->
    <%- include('layout/head'); -%>
</head>

<body>
    <!-- navigation menu -->
    <main class="profilePage">

        <!-- SECTION ONE -->
        <section>
            <h2 class="hiddenElements">profile title</h2>
            <h2>
                <%= title %>
            </h2>
        </section>

        <!-- SECTION TWO profile image-->
        <section>
            <h2 class="hiddenElements">show profile image</h2>
            <article id="showImage" class="result">
                <h2 class="hiddenElements">show profile image from the api</h2>
                <p>Random Image</p>
            </article>
            <button id="imageBtn">Choose a random img</button>
        </section>

        <!-- SECTION THREE -->
        <% profileData.forEach(function(profile){ %>
            <section>
                <h2 class="hiddenElements">information about the person</h2>
                <article>
                    <h3>Name: <%= profile.name %>
                    </h3>
                    <h3>Age: <%= profile.age %>
                    </h3>
                    <h3>Gender: <%= profile.gender %>
                    </h3>
                    <h3>Favorite dish: <%= profile.favorite %>
                    </h3>
                </article>

                <article>
                    <h2 class="hiddenElements">Change information</h2>
                    <ul>
                        <li>
                            <h3>Settings</h2>
                        </li>
                        <li><button id="settingBnt"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                    <path d="M12 21l-12-18h24z" />
                                </svg></button></li>
                    </ul>

                    <ul class="showSettingsMenu">
                        <li>
                            <h3>Username: <%= profile.name %>
                            </h3>
                        </li>
                        <li>
                            <h3>Password: <span>*********</span></h3>
                        </li>
                    </ul>

                </article>
            </section>
            <% }) %>

                <!-- SECTION FOUR -->
                <section>
                    <h2 class="hiddenElements">The edit button</h2>
                    <button>Edit</button>
                </section>

    </main>
    <!--footer-->
    <script src="js/script.js"></script>
</body>

</html>