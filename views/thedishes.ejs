<!DOCTYPE html>
<html lang="en">
    <%- include('../views/partials/head.ejs') %>

<body>
    <%- include('../views/partials/header.ejs') %>
<main id="dishes">
    <section>
        <button id="headMenu">&#129171;</button>
    </section>
    <form action='/thedishes' method="post">
        <ul id="wholeMenu">
            <li id="submenu1"><a>Dishes</a></li>
            <ul id="menuOne">
            <div>
              <input type="checkbox" name="dish" value="japanese" />
              <label>Japanese</label>

              <input type="checkbox" name="dish" value="italian" />
              <label>Italian</label>
            </div>
            <div>
              <input type="checkbox" name="dish" value="argentinian" />
