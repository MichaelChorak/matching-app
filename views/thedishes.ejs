            </div>
            <div>
              <input type="checkbox" name="dish" value="mexican" />
              <label>Mexican</label> 

              <input type="checkbox" name="dish" value="turkish" />
              <label>Turkish</label>
            </div>
            </ul>
            
            <li id="submenu2"><a>Persons</a></li>
            <ul id="menuSecond">
            <div>
              <input type="checkbox" name="person" value="1" />
              <label>1</label>

              <input type="checkbox" name="person" value="2" />
              <label>2</label>
            </div>
            <div>
              <input type="checkbox" name="person" value="3" />
              <label>3</label>  

              <input type="checkbox" name="person" value="4" />
              <label>4</label>
            </div>
            <div>
              <input type="checkbox" name="person" value="5" />
              <label>5</label> 

              <input type="checkbox" name="person" value="6" />
              <label>6</label> 
            </div>
            </ul>
            <button type="submit" class="searchButton">Search</button>
          </ul>
        </form>

        
       <%  dishes.forEach(function(dish){ %>
    <article>
        <img src="<%= dish.image %>">
        <div>
        <h2><%= dish.name %></h2>
        <h3>ðŸ‘¤<%= dish.persons %></h3>
        </div>
        <h3>@<%= dish.username %></h3>
        <h4><%= dish.dish %></h4>
        <p><%= dish.description %></p>
        
        <a href="/thedishes/<%= dish.id %>">Read More</a>
    </article>
    <% }) %>
          

</main>
<script src="/js/script.js"></script>
</body>
</html>